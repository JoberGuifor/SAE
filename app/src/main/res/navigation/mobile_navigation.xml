<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.sae.sae.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_home_second" />
    </fragment>
    <fragment
        android:id="@+id/nav_home_second"
        android:name="com.sae.sae.ui.home.HomeSecondFragment"
        android:label="@string/home_second"
        tools:layout="@layout/fragment_home_second">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/nav_home" />

        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.sae.sae.ui.gallery.GalleryFragment"
        android:label="@string/menu_viasAereas"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_viasAereas"
        android:name="com.sae.sae.ui.perguntas.PerguntaFragment"
        android:label="@string/menu_avaliacaoABC"
        tools:layout="@layout/fragment_pergunta"/>

    <fragment
        android:id="@+id/nav_AvaliacaoResp"
        android:name="com.sae.sae.ui.perguntas.PerguntaFragment"
        android:label="@string/menu_avaliacaoABC"
        tools:layout="@layout/fragment_pergunta"/>

    <navigation
        android:id="@+id/navigation"
        app:startDestination="@id/nav_slideshow" >
        <fragment
            android:id="@+id/nav_slideshow"
            android:name="com.sae.sae.ui.slideshow.SlideshowFragment"
            android:label="@string/menu_sinaisVitais"
            tools:layout="@layout/fragment_slideshow" />
    </navigation>

</navigation>